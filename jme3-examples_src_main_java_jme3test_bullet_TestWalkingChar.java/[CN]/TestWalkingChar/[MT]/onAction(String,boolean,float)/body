{
  if (binding.equals("CharLeft")) {
    if (value) {
      left=true;
    }
 else {
      left=false;
    }
  }
 else   if (binding.equals("CharRight")) {
    if (value) {
      right=true;
    }
 else {
      right=false;
    }
  }
 else   if (binding.equals("CharUp")) {
    if (value) {
      up=true;
    }
 else {
      up=false;
    }
  }
 else   if (binding.equals("CharDown")) {
    if (value) {
      down=true;
    }
 else {
      down=false;
    }
  }
 else   if (binding.equals("CharSpace")) {
    character.jump();
  }
 else   if (binding.equals("CharShoot") && !value) {
    bulletControl();
  }
}
