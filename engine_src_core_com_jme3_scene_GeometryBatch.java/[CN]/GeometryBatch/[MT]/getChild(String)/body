{
  if (name == null) {
    return null;
  }
  for (  Spatial child : children.getArray()) {
    if (name.equals(child.getName())) {
      return child;
    }
 else     if (child instanceof Node) {
      Spatial out=((Node)child).getChild(name);
      if (out != null) {
        return out;
      }
    }
  }
  return null;
}
