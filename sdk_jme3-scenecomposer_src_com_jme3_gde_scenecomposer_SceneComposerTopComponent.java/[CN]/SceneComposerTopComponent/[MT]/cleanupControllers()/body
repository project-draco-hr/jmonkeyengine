{
  if (camController != null) {
    camController.disable();
    camController=null;
  }
  if (toolController != null) {
    toolController.cleanup();
    toolController=null;
  }
  if (editorController != null) {
    editorController.cleanup();
    editorController=null;
  }
  setActivatedNodes(new org.openide.nodes.Node[]{});
}
