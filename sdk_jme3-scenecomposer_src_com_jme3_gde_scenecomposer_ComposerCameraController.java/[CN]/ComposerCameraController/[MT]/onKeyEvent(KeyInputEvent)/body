{
  super.onKeyEvent(kie);
  if (kie.isPressed()) {
    if (KeyInput.KEY_LSHIFT == kie.getKeyCode()) {
      forceCameraControls=true;
    }
  }
 else   if (kie.isReleased()) {
    if (KeyInput.KEY_LSHIFT == kie.getKeyCode()) {
      forceCameraControls=false;
    }
  }
  toolController.doKeyPressed(kie);
}
