{
switch (mode) {
case BorderClamp:
    return GL2GL3.GL_CLAMP_TO_BORDER;
case Clamp:
case EdgeClamp:
  return GL.GL_CLAMP_TO_EDGE;
case Repeat:
return GL.GL_REPEAT;
case MirroredRepeat:
return GL.GL_MIRRORED_REPEAT;
default :
throw new UnsupportedOperationException("Unknown wrap mode: " + mode);
}
}
