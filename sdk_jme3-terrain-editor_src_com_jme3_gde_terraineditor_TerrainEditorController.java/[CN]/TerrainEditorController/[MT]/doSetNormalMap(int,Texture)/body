{
  Terrain terrain=(Terrain)getTerrain(null);
  if (terrain == null)   return;
  if (tex == null) {
    if (layer == 0)     terrain.getMaterial().clearParam("NormalMap");
 else     terrain.getMaterial().clearParam("NormalMap_" + layer);
    return;
  }
  tex.setWrap(WrapMode.Repeat);
  if (layer == 0)   terrain.getMaterial().setTexture("NormalMap",tex);
 else   terrain.getMaterial().setTexture("NormalMap_" + layer,tex);
  setNeedsSave(true);
}
