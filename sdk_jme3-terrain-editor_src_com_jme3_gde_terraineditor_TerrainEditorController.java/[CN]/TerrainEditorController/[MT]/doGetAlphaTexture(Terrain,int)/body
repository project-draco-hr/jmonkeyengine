{
  if (terrain == null)   return null;
  MatParam matParam=null;
  if (alphaLayer == 0)   matParam=terrain.getMaterial().getParam("AlphaMap");
 else   if (alphaLayer == 1)   matParam=terrain.getMaterial().getParam("AlphaMap_1");
 else   if (alphaLayer == 2)   matParam=terrain.getMaterial().getParam("AlphaMap_2");
  if (matParam == null || matParam.getValue() == null) {
    return null;
  }
  Texture tex=(Texture)matParam.getValue();
  return tex;
}
