{
  updateQuadLODs();
  if (lodCalculator.isLodOff()) {
    if (lodOffCount == 1)     return;
 else     lodOffCount++;
  }
 else   lodOffCount=0;
  if (lastCameraLocations != null) {
    if (lastCameraLocationsTheSame(locations) && !lodCalculator.isLodOff())     return;
 else     lastCameraLocations=cloneVectorList(locations);
  }
 else {
    lastCameraLocations=cloneVectorList(locations);
    return;
  }
  if (isLodCalcRunning()) {
    return;
  }
  if (getParent() instanceof TerrainQuad) {
    return;
  }
  if (executor == null)   executor=createExecutorService();
  UpdateLOD updateLodThread=new UpdateLOD(locations,lodCalculator);
  executor.execute(updateLodThread);
}
