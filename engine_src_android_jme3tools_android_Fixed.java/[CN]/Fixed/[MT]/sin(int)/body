{
  n&=FULL_CIRCLE_MASK;
  if (n < QUARTER_CIRCLE * 2) {
    if (n < QUARTER_CIRCLE) {
      return SINE_TABLE[n];
    }
 else {
      return SINE_TABLE[QUARTER_CIRCLE * 2 - n];
    }
  }
 else {
    if (n < QUARTER_CIRCLE * 3) {
      return -SINE_TABLE[n - QUARTER_CIRCLE * 2];
    }
 else {
      return -SINE_TABLE[QUARTER_CIRCLE * 4 - n];
    }
  }
}
