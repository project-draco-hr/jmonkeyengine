{
  int n=atan(div(x,abs(y) + 1));
  if (y > 0) {
    return n;
  }
  if (y < 0) {
    if (x < 0) {
      return -QUARTER_CIRCLE * 2 - n;
    }
    if (x > 0) {
      return QUARTER_CIRCLE * 2 - n;
    }
    return QUARTER_CIRCLE * 2;
  }
  if (x > 0) {
    return QUARTER_CIRCLE;
  }
  return -QUARTER_CIRCLE;
}
