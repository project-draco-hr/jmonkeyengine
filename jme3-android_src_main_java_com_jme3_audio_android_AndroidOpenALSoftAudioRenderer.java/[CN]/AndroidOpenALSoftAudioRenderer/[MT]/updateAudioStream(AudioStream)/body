{
  if (as.getIds() != null) {
    deleteAudioData(as);
  }
  int[] ids=new int[STREAMING_BUFFER_COUNT];
  ib.position(0).limit(STREAMING_BUFFER_COUNT);
  alGenBuffers(STREAMING_BUFFER_COUNT,ib);
  checkError(true);
  ib.position(0).limit(STREAMING_BUFFER_COUNT);
  ib.get(ids);
  as.setIds(ids);
  as.clearUpdateNeeded();
}
