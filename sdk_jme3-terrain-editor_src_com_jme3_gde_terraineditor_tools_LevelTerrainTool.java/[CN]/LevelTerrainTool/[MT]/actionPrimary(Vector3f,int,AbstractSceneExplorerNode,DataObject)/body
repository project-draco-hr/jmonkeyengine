{
  if (radius == 0 || weight == 0)   return;
  if (desiredHeight == null)   desiredHeight=markerSecondary.getWorldTranslation().clone();
 else   desiredHeight.y=markerSecondary.getWorldTranslation().y;
  if (toolParams.absolute)   desiredHeight.y=toolParams.height;
  LevelTerrainToolAction action=new LevelTerrainToolAction(point,radius,weight,desiredHeight,toolParams.precision,getMesh());
  action.doActionPerformed(rootNode,dataObject);
}
