{
switch (fmt) {
case Byte:
    return GL2.GL_BYTE;
case Float:
  return GL2.GL_FLOAT;
case Int:
return GL2.GL_INT;
case Short:
return GL2.GL_SHORT;
case UnsignedByte:
return GL2.GL_UNSIGNED_BYTE;
case UnsignedInt:
return GL2.GL_UNSIGNED_INT;
case UnsignedShort:
return GL2.GL_UNSIGNED_SHORT;
default :
throw new UnsupportedOperationException("Unrecognized vertex format: " + fmt);
}
}
