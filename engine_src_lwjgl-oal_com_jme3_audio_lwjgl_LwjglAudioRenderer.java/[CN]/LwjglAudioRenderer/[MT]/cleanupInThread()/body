{
  if (audioDisabled) {
    AL.destroy();
    return;
  }
  for (int i=0; i < chanSrcs.length; i++) {
    if (chanSrcs[i] != null) {
      clearChannel(i);
    }
  }
  ib.clear();
  ib.put(channels);
  ib.flip();
  alDeleteSources(ib);
  if (supportEfx) {
    ib.position(0).limit(1);
    ib.put(0,reverbFx);
    EFX10.alDeleteEffects(ib);
    ib.position(0).limit(1);
    ib.put(0,reverbFxSlot);
    EFX10.alDeleteAuxiliaryEffectSlots(ib);
  }
  AL.destroy();
}
