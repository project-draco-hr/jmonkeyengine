{
  startCondition(var.getCondition(),source);
  appendIndent(source);
  if (modifier != null) {
    source.append(modifier);
    source.append(" ");
  }
  source.append(var.getType());
  source.append(" ");
  if (appendNameSpace) {
    source.append(var.getNameSpace());
    source.append("_");
  }
  source.append(var.getName());
  if (value != null) {
    source.append(" = ");
    source.append(value);
  }
  source.append(";\n");
  endCondition(var.getCondition(),source);
}
