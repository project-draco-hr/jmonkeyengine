{
  boolean removed=false;
  if (rBody != null) {
    if (rBody.isInWorld()) {
      PhysicsSpace.getPhysicsSpace().remove(this);
      removed=true;
    }
    rBody.destroy();
  }
  preRebuild();
  rBody=new RigidBody(constructionInfo);
  postRebuild();
  if (removed) {
    PhysicsSpace.getPhysicsSpace().add(this);
  }
}
