{
  TouchEvent evt;
  if (eventPool.isEmpty() && wait) {
    logger.warning("eventPool buffer underrun");
    boolean isEmpty;
    do {
synchronized (eventPool) {
        isEmpty=eventPool.isEmpty();
      }
      try {
        Thread.sleep(50);
      }
 catch (      InterruptedException e) {
      }
    }
 while (isEmpty);
    evt=eventPool.pop();
  }
 else   if (eventPool.isEmpty()) {
    evt=new TouchEvent();
    logger.warning("eventPool buffer underrun");
  }
 else {
    evt=eventPool.pop();
  }
  return evt;
}
