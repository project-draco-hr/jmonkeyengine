{
  if (!pressed) {
    setDefaultAxisMarkerColors();
    pickedMarker=null;
    constraintAxis=Vector3f.UNIT_XYZ;
    if (wasDragging) {
      actionPerformed(new MoveUndo(toolController.getSelectedSpatial(),startPosition,lastPosition));
      wasDragging=false;
    }
    pickManager.reset();
  }
}
