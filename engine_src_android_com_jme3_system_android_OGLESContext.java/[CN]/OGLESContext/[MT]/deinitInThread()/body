{
  if (renderable.get()) {
    created.set(false);
    if (renderer != null) {
      renderer.cleanup();
    }
    listener.destroy();
    listener=null;
    renderer=null;
    timer=null;
    logger.info("Display destroyed.");
    renderable.set(false);
    final Context ctx=this.view.getContext();
    if (ctx instanceof AndroidHarness) {
      AndroidHarness harness=(AndroidHarness)ctx;
      if (harness.isFinishOnAppStop()) {
        harness.finish();
      }
    }
  }
}
