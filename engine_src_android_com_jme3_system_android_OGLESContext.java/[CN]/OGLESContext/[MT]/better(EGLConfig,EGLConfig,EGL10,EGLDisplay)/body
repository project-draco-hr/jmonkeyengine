{
  if (a == null)   return b;
  EGLConfig result=null;
  int[] value=new int[1];
  egl.eglGetConfigAttrib(display,a,EGL10.EGL_DEPTH_SIZE,value);
  int depthA=value[0];
  egl.eglGetConfigAttrib(display,b,EGL10.EGL_DEPTH_SIZE,value);
  int depthB=value[0];
  if (depthA > depthB)   result=a;
 else   if (depthA < depthB)   result=b;
 else {
    egl.eglGetConfigAttrib(display,a,EGL10.EGL_RED_SIZE,value);
    int redA=value[0];
    egl.eglGetConfigAttrib(display,b,EGL10.EGL_RED_SIZE,value);
    int redB=value[0];
    if (redA > redB)     result=a;
 else     if (redA < redB)     result=b;
 else {
      result=a;
    }
  }
  return result;
}
