{
  if (kie.getKeyCode() == KeyInput.KEY_G) {
    currentState=State.translate;
    return true;
  }
 else   if (kie.getKeyCode() == KeyInput.KEY_R) {
    currentState=State.rotate;
    return true;
  }
 else   if (kie.getKeyCode() == KeyInput.KEY_S) {
    currentState=State.scale;
    return true;
  }
  return false;
}
