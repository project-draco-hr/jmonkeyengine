{
  if (!pressed) {
    if (!wasDraggingL) {
      Vector3f result=pickWorldLocation(getCamera(),screenCoord,rootNode);
      if (result != null) {
        if (toolController.isSnapToGrid()) {
          result.set(Math.round(result.x),result.y,Math.round(result.z));
        }
        toolController.doSetCursorLocation(result);
      }
    }
    wasDraggingL=false;
  }
}
