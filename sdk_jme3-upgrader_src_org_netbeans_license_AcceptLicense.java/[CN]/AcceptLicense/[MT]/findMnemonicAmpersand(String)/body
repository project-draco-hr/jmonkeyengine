{
  int i=-1;
  do {
    i=text.indexOf('&',i + 1);
    if ((i >= 0) && ((i + 1) < text.length())) {
      if (text.charAt(i + 1) == ' ') {
        continue;
      }
 else       if ((text.charAt(i + 1) == '\'') && (i > 0) && (text.charAt(i - 1) == '\'')) {
        continue;
      }
      return i;
    }
  }
 while (i >= 0);
  return -1;
}
