{
  if (lodCalculator == null)   return;
  if (!enabled) {
    if (!hasResetLod) {
      hasResetLod=true;
      lodCalculator.turnOffLod();
    }
  }
  if (cameras != null) {
    if (cameraLocations.isEmpty() && !cameras.isEmpty()) {
      for (      Camera c : cameras) {
        cameraLocations.add(c.getLocation());
      }
    }
    terrain.update(cameraLocations,lodCalculator);
  }
}
