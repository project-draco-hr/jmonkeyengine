{
  if (button == 0) {
    if (isTerrainEditButtonEnabled() && !forceCameraControls) {
      if (leftMouse)       terrainEditToolActivated=true;
    }
  }
  if (button == 1) {
    if (isTerrainEditButtonEnabled() && !forceCameraControls) {
      toolController.doTerrainEditToolAlternateActivated();
    }
  }
}
