{
  if (pbuffer == null || pbuffer.isBufferLost()) {
    if (pbuffer != null && pbuffer.isBufferLost()) {
      logger.log(Level.WARNING,"PBuffer was lost!");
      pbuffer.destroy();
    }
    pbuffer=new Pbuffer(1,1,new PixelFormat(0,0,0,0,0),null);
    logger.log(Level.INFO,"OGL: Pbuffer has been created");
  }
}
