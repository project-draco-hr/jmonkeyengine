{
switch (mode) {
case Points:
    return gl.GL_POINTS;
case Lines:
  return gl.GL_LINES;
case LineLoop:
return gl.GL_LINE_LOOP;
case LineStrip:
return gl.GL_LINE_STRIP;
case Triangles:
return gl.GL_TRIANGLES;
case TriangleFan:
return gl.GL_TRIANGLE_FAN;
case TriangleStrip:
return gl.GL_TRIANGLE_STRIP;
default :
throw new UnsupportedOperationException("Unrecognized mesh mode: " + mode);
}
}
