{
  if (useCanvas) {
    return ((JmeCanvasContext)getContext()).getCanvas();
  }
 else {
    if (panel == null) {
      panel=((AwtPanelsContext)getContext()).createPanel(PaintMode.Accelerated,true);
      ((AwtPanelsContext)getContext()).setInputSource(panel);
      attachPanel();
    }
    return panel;
  }
}
