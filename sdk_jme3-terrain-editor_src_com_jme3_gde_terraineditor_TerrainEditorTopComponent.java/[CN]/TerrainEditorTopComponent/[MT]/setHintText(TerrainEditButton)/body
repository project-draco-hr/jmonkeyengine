{
  if (TerrainEditButton.none.equals(terrainEditButton))   hintTextArea.setText(org.openide.util.NbBundle.getMessage(TerrainEditorTopComponent.class,"TerrainEditorTopComponent.toolHint.none"));
 else   if (TerrainEditButton.levelTerrain.equals(terrainEditButton))   hintTextArea.setText(org.openide.util.NbBundle.getMessage(TerrainEditorTopComponent.class,"TerrainEditorTopComponent.toolHint.level"));
 else   if (TerrainEditButton.smoothTerrain.equals(terrainEditButton))   hintTextArea.setText(org.openide.util.NbBundle.getMessage(TerrainEditorTopComponent.class,"TerrainEditorTopComponent.toolHint.smooth"));
 else   hintTextArea.setText(org.openide.util.NbBundle.getMessage(TerrainEditorTopComponent.class,"TerrainEditorTopComponent.toolHint.default"));
}
