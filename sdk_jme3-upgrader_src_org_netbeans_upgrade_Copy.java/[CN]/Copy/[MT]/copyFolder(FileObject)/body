{
  FileObject[] srcChildren=sourceFolder.getChildren();
  for (int i=0; i < srcChildren.length; i++) {
    FileObject child=srcChildren[i];
    if (child.isFolder()) {
      copyFolder(child);
      if ((thoseToCopy.contains(child.getPath()) || thoseToCopy.contains(child.getPath() + "/")) && child.getAttributes().hasMoreElements()) {
        copyFolderAttributes(child);
      }
    }
 else {
      if (thoseToCopy.contains(child.getPath())) {
        copyFile(child);
      }
    }
  }
}
