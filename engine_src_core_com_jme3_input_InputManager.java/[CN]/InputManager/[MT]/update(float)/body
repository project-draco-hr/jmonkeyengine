{
  frameTPF=tpf;
  safeMode=tpf < 0.015f;
  long currentTime=keys.getInputTimeNanos();
  frameDelta=currentTime - lastUpdateTime;
  eventsPermitted=true;
  keys.update();
  mouse.update();
  if (joystick != null) {
    joystick.update();
  }
  if (touch != null) {
    touch.update();
  }
  if (sensor != null) {
    sensor.update();
  }
  eventsPermitted=false;
  processQueue();
  invokeUpdateActions();
  lastLastUpdateTime=lastUpdateTime;
  lastUpdateTime=currentTime;
}
