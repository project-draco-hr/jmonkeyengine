{
  this.inputManager=inputManager;
  int joyIndex=1;
  for (  Entry entry : sensors) {
    SensorData sensorData=(SensorData)entry.getValue();
    if (sensorData != null) {
      if (sensorData.sensor != null && sensorData.createJoystick) {
        joyIndex++;
      }
    }
  }
  joysticks=new Joystick[joyIndex];
  joyIndex=0;
  Joystick joystick;
  joystick=new AndroidJoystick(inputManager,this,joyIndex,"Device Orientation");
  joysticks[joyIndex]=joystick;
  joyIndex++;
  for (  Entry entry : sensors) {
    SensorData sensorData=(SensorData)entry.getValue();
    if (sensorData != null) {
      if (sensorData.sensor != null && sensorData.createJoystick) {
        sensorData.joyID=joyIndex;
        joystick=new AndroidJoystick(inputManager,this,joyIndex,sensorData.joyName);
        joysticks[joyIndex]=joystick;
        joyIndex++;
      }
    }
  }
  return joysticks;
}
