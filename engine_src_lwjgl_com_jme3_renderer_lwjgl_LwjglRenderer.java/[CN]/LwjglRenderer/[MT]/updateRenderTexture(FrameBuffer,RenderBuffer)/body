{
  Texture tex=rb.getTexture();
  Image image=tex.getImage();
  if (image.isUpdateNeeded()) {
    updateTexImageData(image,tex.getType(),tex.getMinFilter().usesMipMapLevels(),0);
    setupTextureParams(tex);
  }
  glFramebufferTexture2DEXT(GL_FRAMEBUFFER_EXT,convertAttachmentSlot(rb.getSlot()),convertTextureType(tex.getType(),image.getMultiSamples(),rb.getFace()),image.getId(),0);
}
