{
switch (mode) {
case Points:
    return GL_POINTS;
case Lines:
  return GL_LINES;
case LineLoop:
return GL_LINE_LOOP;
case LineStrip:
return GL_LINE_STRIP;
case Triangles:
return GL_TRIANGLES;
case TriangleFan:
return GL_TRIANGLE_FAN;
case TriangleStrip:
return GL_TRIANGLE_STRIP;
default :
throw new UnsupportedOperationException("Unrecognized mesh mode: " + mode);
}
}
