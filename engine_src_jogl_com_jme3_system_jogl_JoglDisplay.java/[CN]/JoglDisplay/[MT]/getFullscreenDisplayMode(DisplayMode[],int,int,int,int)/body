{
  for (  DisplayMode mode : modes) {
    if (mode.getWidth() == width && mode.getHeight() == height && (mode.getBitDepth() == DisplayMode.BIT_DEPTH_MULTI || mode.getBitDepth() == bpp || (mode.getBitDepth() == 32 && bpp == 24)) && mode.getRefreshRate() == freq) {
      return mode;
    }
  }
  return null;
}
