{
switch (fmt) {
case Alpha16:
case Alpha8:
    return GL.GL_ALPHA;
case Luminance8Alpha8:
case Luminance16Alpha16:
  return GL.GL_LUMINANCE_ALPHA;
case Luminance8:
case Luminance16:
return GL.GL_LUMINANCE;
case RGB10:
case RGB16:
case BGR8:
case RGB8:
case RGB565:
return GL.GL_RGB;
case RGB5A1:
case RGBA16:
case RGBA8:
return GL.GL_RGBA;
case Depth:
return GL2ES2.GL_DEPTH_COMPONENT;
default :
throw new UnsupportedOperationException("Unrecognized format: " + fmt);
}
}
