{
  if (listener == null)   throw new IllegalStateException("SystemListener is not set on context!" + "Must set with JmeContext.setSystemListner().");
  logger.log(Level.INFO,"Using LWJGL {0}",Sys.getVersion());
  if (!initInThread()) {
    logger.log(Level.SEVERE,"Display initialization failed. Cannot continue.");
    return;
  }
  while (true) {
    if (renderable.get()) {
      if (Display.isCloseRequested())       listener.requestClose(false);
      if (wasActive != Display.isActive()) {
        if (!wasActive) {
          listener.gainFocus();
          timer.reset();
          wasActive=true;
        }
 else {
          listener.loseFocus();
          wasActive=false;
        }
      }
    }
    runLoop();
    if (needClose.get())     break;
  }
  deinitInThread();
}
