{
  stringBuf.setLength(0);
  stringBuf.append(uniform.getName()).append('\0');
  updateNameBuffer();
  int loc=JmeIosGLES.glGetUniformLocation(shader.getId(),uniform.getName());
  JmeIosGLES.checkGLError();
  if (loc < 0) {
    uniform.setLocation(-1);
  }
 else {
    uniform.setLocation(loc);
  }
}
