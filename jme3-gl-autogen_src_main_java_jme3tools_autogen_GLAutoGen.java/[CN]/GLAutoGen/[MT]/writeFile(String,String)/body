{
  FileWriter writer=null;
  try {
    writer=new FileWriter(path);
    writer.write(content);
    writer.close();
  }
 catch (  IOException ex) {
    ex.printStackTrace();
  }
 finally {
    if (writer != null) {
      try {
        writer.close();
      }
 catch (      IOException ex) {
      }
    }
  }
}
