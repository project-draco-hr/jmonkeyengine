{
  if ("MouseButtonLeft".equals(string)) {
    if (pressed) {
      if (!buttonDownL) {
        checkClickL=true;
        checkReleaseL=false;
      }
    }
 else {
      if (buttonDownL) {
        checkReleaseL=true;
        checkClickL=false;
      }
    }
    buttonDownL=pressed;
  }
  if ("MouseButtonRight".equals(string)) {
    if (pressed) {
      if (!buttonDownR) {
        checkClickR=true;
        checkReleaseR=false;
      }
    }
 else {
      if (buttonDownR) {
        checkReleaseR=true;
        checkClickR=false;
      }
    }
    buttonDownR=pressed;
  }
  if ("MouseButtonMiddle".equals(string)) {
    if (pressed) {
      if (!buttonDownM) {
        checkClickM=true;
        checkReleaseM=false;
      }
    }
 else {
      if (buttonDownM) {
        checkReleaseM=true;
        checkClickM=false;
      }
    }
    buttonDownM=pressed;
  }
}
