{
  super.simpleUpdate(tpf);
  if (initCounter < 2) {
    initCounter++;
  }
 else   if (initCounter == 2) {
    initOpenCL2();
    updateOpenCL(tpf);
    initCounter=3;
  }
 else {
    updateOpenCL(tpf);
  }
  gcCounter++;
  if (gcCounter > 10) {
    Runtime.getRuntime().gc();
    gcCounter=0;
  }
}
