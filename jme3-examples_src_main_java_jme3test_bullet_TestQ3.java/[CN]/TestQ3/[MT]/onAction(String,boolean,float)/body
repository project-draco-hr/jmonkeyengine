{
  if (binding.equals("Lefts")) {
    if (value)     left=true;
 else     left=false;
  }
 else   if (binding.equals("Rights")) {
    if (value)     right=true;
 else     right=false;
  }
 else   if (binding.equals("Ups")) {
    if (value)     up=true;
 else     up=false;
  }
 else   if (binding.equals("Downs")) {
    if (value)     down=true;
 else     down=false;
  }
 else   if (binding.equals("Space")) {
    player.jump();
  }
}
