{
  if (tris.size() > 0) {
    List<Geometry> geomsList=TriangleCollector.gatherTris(inGeoms,tris);
    geoms=new Geometry[geomsList.size()];
    geomsList.toArray(geoms);
  }
 else {
    geoms=null;
  }
  for (int i=0; i < 8; i++) {
    if (children[i] != null) {
      children[i].collectTriangles(inGeoms);
    }
  }
}
