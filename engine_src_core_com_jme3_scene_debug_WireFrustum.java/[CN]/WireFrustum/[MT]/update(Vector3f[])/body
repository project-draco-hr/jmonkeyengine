{
  VertexBuffer vb=getBuffer(Type.Position);
  if (vb == null) {
    setBuffer(Type.Position,3,BufferUtils.createFloatBuffer(points));
    return;
  }
  FloatBuffer b=BufferUtils.createFloatBuffer(points);
  FloatBuffer a=(FloatBuffer)vb.getData();
  b.rewind();
  a.rewind();
  a.put(b);
  a.rewind();
  vb.setUpdateNeeded();
  updateBound();
}
