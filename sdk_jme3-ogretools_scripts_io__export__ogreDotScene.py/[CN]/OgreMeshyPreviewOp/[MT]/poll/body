@classmethod
def poll(cls, context):
    if (context.active_object and (context.active_object.type in ('MESH', 'EMPTY')) and (context.mode != 'EDIT_MESH')):
        if ((context.active_object.type == 'EMPTY') and (context.active_object.dupli_type != 'GROUP')):
            return False
        else:
            return True
