def draw(self, context):
    ob = context.active_object
    layout = self.layout
    box = layout.box()
    box.prop(ob, 'cast_shadows')
    box.prop(ob, 'use_draw_distance')
    if ob.use_draw_distance:
        box.prop(ob, 'draw_distance')
    if (ob.type == 'EMPTY'):
        box.prop(ob, 'use_avatar')
        box.prop(ob, 'avatar_reference')
