def find_uv_layer_index(uvname, material=None):
    idx = 0
    for mesh in bpy.data.meshes:
        if ((material is None) or (material.name in mesh.materials)):
            if mesh.uv_textures:
                names = [uv.name for uv in mesh.uv_textures]
                if (uvname in names):
                    idx = names.index(uvname)
                    break
    return idx
