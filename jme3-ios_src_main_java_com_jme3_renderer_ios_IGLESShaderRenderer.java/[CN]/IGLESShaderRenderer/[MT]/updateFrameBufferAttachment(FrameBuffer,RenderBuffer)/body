{
  boolean needAttach;
  if (rb.getTexture() == null) {
    needAttach=rb.getId() == -1;
    updateRenderBuffer(fb,rb);
  }
 else {
    needAttach=false;
    updateRenderTexture(fb,rb);
  }
  if (needAttach) {
    JmeIosGLES.glFramebufferRenderbuffer(JmeIosGLES.GL_FRAMEBUFFER,convertAttachmentSlot(rb.getSlot()),JmeIosGLES.GL_RENDERBUFFER,rb.getId());
    JmeIosGLES.checkGLError();
  }
}
