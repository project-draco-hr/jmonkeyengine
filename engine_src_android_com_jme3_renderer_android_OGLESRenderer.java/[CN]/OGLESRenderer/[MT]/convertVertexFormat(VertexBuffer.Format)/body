{
switch (fmt) {
case Byte:
    return gl.GL_BYTE;
case Float:
  return gl.GL_FLOAT;
case Short:
return gl.GL_SHORT;
case UnsignedByte:
return gl.GL_UNSIGNED_BYTE;
case UnsignedShort:
return gl.GL_UNSIGNED_SHORT;
case Int:
return gl.GL_FIXED;
default :
throw new UnsupportedOperationException("Unrecognized vertex format: " + fmt);
}
}
