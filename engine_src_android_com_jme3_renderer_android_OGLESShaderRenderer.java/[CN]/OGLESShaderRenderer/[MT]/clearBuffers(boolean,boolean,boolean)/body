{
  int bits=0;
  if (color)   bits=GLES20.GL_COLOR_BUFFER_BIT;
  if (depth)   bits|=GLES20.GL_DEPTH_BUFFER_BIT;
  if (stencil)   bits|=GLES20.GL_STENCIL_BUFFER_BIT;
  if (bits != 0) {
    if (verboseLogging)     logger.info("GLES20.glClear(color=" + color + ", depth="+ depth+ ", stencil="+ stencil+ ")");
    GLES20.glClear(bits);
    checkGLError();
  }
}
