{
  if (context.pointSize != mesh.getPointSize()) {
    if (verboseLogging)     logger.info("GLES10.glPointSize(" + mesh.getPointSize() + ")");
    GLES10.glPointSize(mesh.getPointSize());
    context.pointSize=mesh.getPointSize();
  }
  if (context.lineWidth != mesh.getLineWidth()) {
    if (verboseLogging)     logger.info("GLES20.glLineWidth(" + mesh.getLineWidth() + ")");
    GLES20.glLineWidth(mesh.getLineWidth());
    context.lineWidth=mesh.getLineWidth();
  }
  statistics.onMeshDrawn(mesh,lod);
  if (useVBO) {
    if (verboseLogging)     logger.info("RENDERING A MESH USING VertexBufferObject");
    renderMeshDefault(mesh,lod,count);
  }
 else {
    if (verboseLogging)     logger.info("RENDERING A MESH USING VertexArray");
    renderMeshVertexArray(mesh,lod,count);
  }
}
