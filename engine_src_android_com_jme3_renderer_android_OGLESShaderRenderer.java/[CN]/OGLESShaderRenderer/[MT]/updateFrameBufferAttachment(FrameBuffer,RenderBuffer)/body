{
  boolean needAttach;
  if (rb.getTexture() == null) {
    needAttach=rb.getId() == -1;
    updateRenderBuffer(fb,rb);
  }
 else {
    needAttach=false;
    updateRenderTexture(fb,rb);
  }
  if (needAttach) {
    GLES20.glFramebufferRenderbuffer(GLES20.GL_FRAMEBUFFER,convertAttachmentSlot(rb.getSlot()),GLES20.GL_RENDERBUFFER,rb.getId());
  }
}
