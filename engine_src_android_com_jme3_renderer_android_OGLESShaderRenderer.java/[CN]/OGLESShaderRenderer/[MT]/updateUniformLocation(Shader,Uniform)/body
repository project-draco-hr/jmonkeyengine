{
  stringBuf.setLength(0);
  stringBuf.append(uniform.getName()).append('\0');
  updateNameBuffer();
  if (verboseLogging)   logger.info("GLES20.glGetUniformLocation(" + shader.getId() + ", "+ uniform.getName()+ ")");
  int loc=GLES20.glGetUniformLocation(shader.getId(),uniform.getName());
  checkGLError();
  if (loc < 0) {
    uniform.setLocation(-1);
    if (verboseLogging)     logger.warning("Uniform [" + uniform.getName() + "] is not declared in shader.");
  }
 else {
    uniform.setLocation(loc);
  }
}
