{
  FileLock lock=null;
  try {
    FileObject file=getConfigFile();
    lock=file.lock();
    OutputStream out=file.getOutputStream(lock);
    XMLUtil.write(configuration,out,"UTF-8");
    if (out != null) {
      out.close();
    }
  }
 catch (  IOException ex) {
    Exceptions.printStackTrace(ex);
  }
 finally {
    if (lock != null) {
      lock.releaseLock();
    }
  }
}
