{
  String imgTxt=null;
  if (image != null) {
    imgTxt=", img=" + image.getWidth() + "x"+ image.getHeight();
    if (image.getDepth() > 1)     imgTxt+="x" + image.getDepth();
    imgTxt+="-" + image.getFormat().name();
    if (image.hasMipmaps())     imgTxt+="/mips";
  }
  return getClass().getSimpleName() + "[name=" + name+ imgTxt+ "]";
}
