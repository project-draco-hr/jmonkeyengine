{
  androidInput.getView().getHandler().post(new Runnable(){
    public void run(){
      InputMethodManager manager=(InputMethodManager)androidInput.getView().getContext().getSystemService(Context.INPUT_METHOD_SERVICE);
      if (visible) {
        manager.showSoftInput(androidInput.getView(),0);
        sendKeyEvents=true;
      }
 else {
        manager.hideSoftInputFromWindow(androidInput.getView().getWindowToken(),0);
        sendKeyEvents=false;
      }
    }
  }
);
}
