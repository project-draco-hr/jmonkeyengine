{
  SceneApplication.getApplication().enqueue(new Callable<Void>(){
    public Void call() throws Exception {
      PointLight light=new PointLight();
      light.setColor(ColorRGBA.White);
      node.addLight(light);
      addLightUndo(node,light);
      setModified();
      return null;
    }
  }
);
}
