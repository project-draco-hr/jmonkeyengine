{
  int i=(y * width + x) * bpp;
  if (alphaPos != -1) {
    components[0]=buf.get(i + alphaPos) & 0xff;
  }
  if (redPos != -1) {
    components[1]=buf.get(i + redPos) & 0xff;
  }
  if (greenPos != -1) {
    components[2]=buf.get(i + greenPos) & 0xff;
  }
  if (bluePos != -1) {
    components[3]=buf.get(i + bluePos) & 0xff;
  }
}
