{
  fpsText.setText("Bullet Size: " + bulletSize);
  if (!ragdoll.hasControl()) {
    if (model.getLocalTranslation().getZ() < -10) {
      forward=true;
    }
 else     if (model.getLocalTranslation().getZ() > 10) {
      forward=false;
    }
    if (forward) {
      model.move(-tpf,0,tpf);
    }
 else {
      model.move(tpf,0,-tpf);
    }
  }
}
