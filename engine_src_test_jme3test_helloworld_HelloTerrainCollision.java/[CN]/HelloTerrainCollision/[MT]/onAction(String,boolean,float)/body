{
  if (binding.equals("Left")) {
    if (value) {
      left=true;
    }
 else {
      left=false;
    }
  }
 else   if (binding.equals("Right")) {
    if (value) {
      right=true;
    }
 else {
      right=false;
    }
  }
 else   if (binding.equals("Up")) {
    if (value) {
      up=true;
    }
 else {
      up=false;
    }
  }
 else   if (binding.equals("Down")) {
    if (value) {
      down=true;
    }
 else {
      down=false;
    }
  }
 else   if (binding.equals("Jump")) {
    player.jump();
  }
}
