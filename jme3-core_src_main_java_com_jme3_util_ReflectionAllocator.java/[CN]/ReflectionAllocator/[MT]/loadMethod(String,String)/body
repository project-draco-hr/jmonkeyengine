{
  try {
    Method method=Class.forName(className).getMethod(methodName);
    method.setAccessible(true);
    return method;
  }
 catch (  NoSuchMethodException ex) {
    return null;
  }
catch (  SecurityException ex) {
    return null;
  }
catch (  ClassNotFoundException ex) {
    return null;
  }
}
