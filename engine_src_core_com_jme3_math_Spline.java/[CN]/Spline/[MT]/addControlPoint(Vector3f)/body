{
  if (controlPoints.size() > 2 && this.cycle) {
    controlPoints.remove(controlPoints.size() - 1);
  }
  controlPoints.add(controlPoint);
  if (controlPoints.size() >= 2 && this.cycle) {
    controlPoints.add(controlPoints.get(0));
  }
  if (controlPoints.size() > 1) {
    this.computeTotalLentgh();
  }
}
